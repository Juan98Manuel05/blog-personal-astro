---
import Layout from '../layouts/Layout.astro';
import Card2 from '../components/Card2.astro';
import Knowledge from '../components/KnowLedge.astro';


---

<Layout title="Estudies">
	<main>
        <!-- <h1 class="text-studies">My <span class="text-green">Estudies</span> and <span class="text-purple">Proyects</span></h1> -->
        <div class="container-studies">

            <div class="back-page">
                <div class="container-svg-return">
                    <a href="/index.html">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="white" width="30px"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M256 504C119 504 8 393 8 256S119 8 256 8s248 111 248 248-111 248-248 248zm28.9-143.6L209.4 288H392c13.3 0 24-10.7 24-24v-16c0-13.3-10.7-24-24-24H209.4l75.5-72.4c9.7-9.3 9.9-24.8 .4-34.3l-11-10.9c-9.4-9.4-24.6-9.4-33.9 0L107.7 239c-9.4 9.4-9.4 24.6 0 33.9l132.7 132.7c9.4 9.4 24.6 9.4 33.9 0l11-10.9c9.5-9.5 9.3-25-.4-34.3z"/></svg>
                    </a>
                </div> 
                <h3 class="subtitle" style="color: gray;">Trayectoria</h3>
                <h1 class="title" style="margin-top: -10px;">Profesional:</h1>
            </div>
            
            <div class="container-degree">
                <div class="title-degree">
                    <h1>Manuel Camacho</h1>
                    <h1><span class="text-gradient">Full Stack Developer</span>, Computer Engineer</h1>
                </div>
            </div>

            <div class="info-personal">
                <div class="biography text-default">
                    <h3> Biography </h3>
                    <p> 
                        Trabajo por dinero y amor a la programacion!
                        Soy Desarrollador de software residente en Colombia.
                    </p>
                </div>
                <div class="amount-experience text-default">
                    <h3> Years of experience</h3>
                    <p style="font-size: 75px; font-weight: bold;">
                        5
                    </p>
                </div>
                <div class="services text-default">
                    <h3> Services </h3>
                    <p> 
                        > Software development. <br>
                        > Web Developmente <br>
                        > Web Designer (Hobbie)
                    </p>
                </div>
            </div>

            <div class="back-page">
                <h3 class="subtitle" style="color: gray;">Conocimientos</h3>
            </div>
            <div class="container-knowledge">
                <div class="container-img">
                    <Knowledge />
                </div>
            </div>

            <div class="back-page">
                <h3 class="subtitle" style="color: gray;">Estudios</h3>
                <h1 class="title" style="margin-top: -10px;">Profesionales:</h1>
            </div>

            
            <div class="container-titles">
                <Card2 
                    Period="2020 - 2022"
                    Title="Ingeniería en informática"
                    College="Corporación Universitaria Autónoma de Nariño"
                />
                <Card2
                    Period="2016 - 2019"
                    Title="Desarrollo de Software"
                    College="Corporación Universitaria Minuto de Dios"
                />
            </div>
        </div>
	</main>
</Layout>

<style>
    main {
		margin: auto;
        margin-top: 30px;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

    h1{
        margin: 0;
    }

    .back-page h3{
        margin: 0px;
    }

    .text-gradient {
		color: #7eff0e;
	}
    .title-degree{
        text-align: center;
        padding: 25px 0px;
    }
    .title-degree h1:nth-child(1){
        font-size: 60px;
        font-weight: 500;
    }
    .title-degree h1:nth-child(2){
        font-size: 40px;
        font-weight: bold;
        margin-top: -10px;
    }

    .info-personal {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        padding: 60px 0px;
    }
    .info-personal div{
        padding: 10px;
        width: 28.33%;
        border: 1px solid rgba(173, 255, 47, 0.5);
        border-radius: 8px;
        padding: 20px;
        margin-right: 18px;
        transition: 500ms;
        box-shadow: rgba(172, 255, 47, 0.322) 0px 5px 50px -10px;
    }

    .info-personal div:nth-child(2n + 1){
        background-color: #0a0a0a;
    }

    .info-personal div:nth-child(2n + 1):hover{
        border: 1px solid rgba(173, 255, 47, 0.5);
        background-color: #7eff0e27;
        color: white;
    }

    .text-default h3{
        margin: 0;
        line-height: 30px;
        font-size: 20px;
        font-weight: bold;
    }
    .text-default p{
        margin: 0px;
        font-weight: 400;
        line-height: normal;
    }

    .amount-experience{
        text-align: center;
        transform: scale(1.15);
        background: #7eff0e;
        color: black;
    }
    

    .container-titles{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        padding: 50px 0px;
    }


    @media screen and (max-width: 1024px){
        .info-personal div{
            width: 29%;
            margin-right: 0px;
            margin-bottom: 15px;
        }
        .title-degree{
            text-align: center;
            padding: 25px 0px;
        }
        .amount-experience{
            align-content: center;
            transform: none;
        }
        .text-default p{
            font-size: 18px;
        }
        .title-degree h1:nth-child(1){
            font-size: 30px;
            font-weight: 500;
            margin-bottom: 30px;
        }
        .title-degree h1:nth-child(2){
            margin-top: -10px;
            line-height: normal;
            font-size: 23px;
        }
    }

    @media screen and (max-width: 768px){
        .info-personal{
            padding: 20px 0px
        }
        .info-personal div{
            width: 27.5%;
            margin-right: 0px;
            margin-bottom: 15px;
        }
        .title-degree{
            text-align: center;
            padding: 25px 0px;
        }
        .amount-experience{
            align-content: center;
        }
        .text-default p{
            font-size: 18px;
        }
        .title-degree h1:nth-child(1){
            font-size: 30px;
            font-weight: 500;
            margin-bottom: 30px;
        }
        .title-degree h1:nth-child(2){
            margin-top: -10px;
            line-height: normal;
            font-size: 23px;
        }
        .title{
            font-size: 30px;
        }
        .container-titles{
            padding: 30px 0px;
        }
    }

    @media screen and (max-width: 425px){
        .info-personal div{
            width: 100%;
            margin-right: 0px;
            margin-bottom: 15px;
        }
        .title-degree{
            text-align: center;
            padding: 25px 0px;
            }
        .title-degree h1:nth-child(1){
            font-size: 30px;
            font-weight: 500;
            margin-bottom: 30px;
        }
        .title-degree h1:nth-child(2){
            margin-top: -10px;
            line-height: normal;
            font-size: 23px;
        }
        .amount-experience{
            transform: none;
        }
    }
</style>